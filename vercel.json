{
    "version": 2,
    "builds": [
      {
        "src": "index.py",  
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.8"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.py"  // Points to your Flask app (index.py)
      }
    ],
    "env": {
      "FLASK_APP": "index.py",  // Ensure the correct app file
      "FLASK_ENV": "production", // Environment setting
      "DATABASE_URL": "sqlite:///timetable.db"  // External database if needed
    }
  }
  